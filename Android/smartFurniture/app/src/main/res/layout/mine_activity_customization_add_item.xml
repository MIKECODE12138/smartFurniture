<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="item"
            type="com.zucc.smartfurniture.module.mine.model.CustomizationDeviceAddVM"/>
        <variable
            name="listener"
            type="com.zucc.smartfurniture.common.BaseRecycleViewVM.OnEvnetListener"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x10"
        android:background="@color/white"
        android:orientation="horizontal"
        android:onClick="@{()->listener.onClickListener(item)}">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.classify}"
            android:textSize="@dimen/text_size_h1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.detail}"
            android:textSize="@dimen/text_size_h1"/>
    </LinearLayout>
</layout>