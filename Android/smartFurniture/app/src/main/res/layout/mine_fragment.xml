<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers"/>
        <variable
            name="viewCtrl"
            type="com.zucc.smartfurniture.module.mine.viewCtrl.MineCtrl"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/mine"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_h1"/>
        </android.support.v7.widget.Toolbar>
       <android.support.v7.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:scrollbars="none"
           android:overScrollMode="never"
           app:addItemDecoration="@{viewCtrl.viewModel.type}"
           app:itemBinding="@{viewCtrl.viewModel.onItemBind}"
           app:items="@{viewCtrl.viewModel.items}"
           app:layoutManager="@{LayoutManagers.linear()}">
       </android.support.v7.widget.RecyclerView>
        <com.zucc.smartfurniture.views.NoDoubleClickButton
            android:id="@+id/button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginTop="@dimen/y30"
            android:background="@drawable/selector_button"
            android:text="@string/mine_login_out"
            android:textColor="@color/white"
            android:onClick="@{(view)->viewCtrl.exit(view)}"/>
    </LinearLayout>
</layout>